{
  "name": "@playwright/cli",
  "version": "0.0.56",
  "description": "playwright-cli browser automation tool",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/playwright-mcp.git"
  },
  "homepage": "https://playwright.dev",
  "engines": {
    "node": ">=18"
  },
  "author": {
    "name": "Microsoft Corporation"
  },
  "license": "Apache-2.0",
  "bin": {
    "playwright-cli": "./cli.js"
  },
  "scripts": {
    "lint": "tsc --project .",
    "build": "esbuild src/cli.ts --bundle --platform=node --target=node18 --format=cjs --outfile=lib/cli.js",
    "watch": "esbuild src/cli.ts --bundle --platform=node --target=node18 --format=cjs --outfile=lib/cli.js --watch",
    "test": "playwright test",
    "clean": "rm -rf lib",
    "npm-publish": "cp ../LICENSE . && npm run clean && npm run build && npm run test && npm publish"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/minimist": "^1.2.5",
    "debug": "^4.4.3",
    "esbuild": "^0.24.0",
    "minimist": "^1.2.8",
    "typescript": "^5.8.2"
  }
}
